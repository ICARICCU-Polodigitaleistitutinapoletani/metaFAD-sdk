<pnx:JSscript><![CDATA[
$(document).ready(function(){
  $('button.delete-exp-files').click(function(e) {
    var id = $(this).attr('id').split('_')[1];
    $.ajax({
      type: "POST",
      url: Pinax.ajaxUrl+"deleteFilesExport",
      dataType: 'json',
      data: {
        id: id
      },
      success: function( data ) {
        location.href = Pinax.baseUrl + "/metafad.jobsReport"
      }
    });
  });    
});
]]></pnx:JSscript>
    </mvc:State>

</mvc:Page>
